<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:paddingBottom="4.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/msg_search" android:contentDescription="@string/msg_search" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_sect_invocation" android:contentDescription="@string/search_sect_invocation" />
    <Button android:id="@id/btn_start_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_onsearchrequested" android:contentDescription="@string/label_onsearchrequested" />
    <Spinner android:id="@id/spinner_menu_mode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawSelectorOnTop="true" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_sect_options" android:contentDescription="@string/search_sect_options" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_search_query_prefill" android:contentDescription="@string/label_search_query_prefill" />
            <EditText android:id="@id/txt_query_prefill" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxEms="10" android:minEms="10" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_search_query_appdata" android:contentDescription="@string/label_search_query_appdata" />
            <EditText android:id="@id/txt_query_appdata" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxEms="10" android:minEms="10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>