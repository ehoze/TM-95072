<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="@drawable/box" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:background="@drawable/red" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/visibility_1_view_1" android:contentDescription="@string/visibility_1_view_1" />
        <TextView android:id="@id/victim" android:background="@drawable/green" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/visibility_1_view_2" android:contentDescription="@string/visibility_1_view_2" />
        <TextView android:background="@drawable/blue" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/visibility_1_view_3" android:contentDescription="@string/visibility_1_view_3" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@id/vis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/visibility_1_vis" android:contentDescription="@string/visibility_1_vis" />
        <Button android:id="@id/invis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/visibility_1_invis" android:contentDescription="@string/visibility_1_invis" />
        <Button android:id="@id/gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/visibility_1_gone" android:contentDescription="@string/visibility_1_gone" />
    </LinearLayout>
</LinearLayout>