<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="6.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="#ffff0000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/sms_warning" android:contentDescription="@string/sms_warning" />
        <CheckBox android:id="@id/sms_enable_receiver" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sms_enable_receiver" android:contentDescription="@string/sms_enable_receiver" />
        <TableLayout android:padding="6.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="1">
            <TableRow android:layout_width="fill_parent">
                <TextView android:text="@string/sms_recipient_label" android:contentDescription="@string/sms_recipient_label" />
                <EditText android:id="@id/sms_recipient" />
            </TableRow>
            <TableRow>
                <TextView android:text="@string/sms_content_label" android:contentDescription="@string/sms_content_label" />
                <EditText android:id="@id/sms_content" />
            </TableRow>
            <TableRow>
                <Button android:id="@id/sms_send_message" android:layout_column="1" android:text="@string/sms_send_message" android:contentDescription="@string/sms_send_message" />
            </TableRow>
            <TableRow>
                <TextView android:id="@id/sms_status" android:layout_column="1" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>